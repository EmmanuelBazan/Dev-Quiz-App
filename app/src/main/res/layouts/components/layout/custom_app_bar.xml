<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:contentInsetStart="0dp"
    android:elevation="20dp"
    app:layout_insetEdge="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="12dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btnGoBackCustomAppBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:padding="5dp"
            android:backgroundTint="@color/transparent"
            app:tint="@color/mainGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/txtTitleCustomAppBar"
            style="@style/Txt_18_B_Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="( title )"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnRightCustomAppBar"
            app:layout_constraintStart_toEndOf="@id/btnGoBackCustomAppBar" />

        <ImageButton
            android:id="@+id/btnRightCustomAppBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>