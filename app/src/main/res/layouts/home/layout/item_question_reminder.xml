<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:paddingVertical="17dp">

        <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/topicInfoLayout">

            <TextView
                android:id="@+id/titleTopic"
                style="@style/Txt_12_B_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Titulo de la tecnologia)"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/titleReminder"
                style="@style/Txt_16_R_Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Titulo del recordatorio)"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtScheduleItemReminder"
            style="@style/Txt_10_M_Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(09:00am)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutTitle"/>

        <LinearLayout
            android:id="@+id/topicInfoLayout"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgIconItemReminder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/react"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/txtDifficultyItemReminder"
                style="@style/Txt_14_R_Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Dificultad)"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>