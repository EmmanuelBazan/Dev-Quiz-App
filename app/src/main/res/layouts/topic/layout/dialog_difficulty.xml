<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@null"
    android:backgroundTint="@null"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>

            <TextView
                style="@style/Txt_18_B_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dificultad" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="21dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="100dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/levels_icon"
                    app:tint="@color/mainGreen"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <Button
                android:id="@+id/btnEasyDifficultyDialog"
                android:layout_marginHorizontal="26dp"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/corner_radius_10"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Facil"
                android:textColor="@color/white_f2"/>

            <Button
                android:id="@+id/btnIntermediateDifficultyDialog"
                android:layout_marginHorizontal="26dp"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/corner_radius_10"
                android:text="Intermedio"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/white_f2"/>

            <Button
                android:id="@+id/btnHardDifficultyDialog"
                android:layout_marginHorizontal="26dp"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/corner_radius_10"
                android:text="Dificil"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/white_f2"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>