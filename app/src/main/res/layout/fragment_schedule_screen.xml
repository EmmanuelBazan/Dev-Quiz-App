<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.pages.schedule.pages.ScheduleScreenFragment">

    <include
        android:id="@+id/appBarSchedule"
        layout="@layout/custom_app_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="22dp">

        <TextView
            android:id="@+id/btnInitTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="00 : 00 PM"
            android:textAlignment="center"
            android:textSize="48dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutWeekDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnInitTimePicker"
            tools:layout_editor_absoluteX="16dp">

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:layout_marginHorizontal="22dp"-->
<!--                android:id="@+id/recyclerViewDaysOfWeek"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:orientation="horizontal"-->
<!--                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>-->

            <Button
                android:id="@+id/btnMonday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_border_background"
                android:padding="0dp"
                android:text="L"
                android:textColor="@color/mainGreen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnTuesday"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnTuesday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_border_background"
                android:textColor="@color/mainGreen"
                android:padding="0dp"
                android:text="M"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnWenesday"
                app:layout_constraintStart_toEndOf="@id/btnMonday"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnWenesday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_border_background"
                android:textColor="@color/mainGreen"
                android:padding="0dp"
                android:text="M"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnThursday"
                app:layout_constraintStart_toEndOf="@id/btnTuesday"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnThursday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_border_background"
                android:textColor="@color/mainGreen"
                android:padding="0dp"
                android:text="J"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnFriday"
                app:layout_constraintStart_toEndOf="@id/btnWenesday"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnFriday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_border_background"
                android:textColor="@color/mainGreen"
                android:padding="0dp"
                android:text="V"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSaturday"
                app:layout_constraintStart_toEndOf="@id/btnThursday"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnSaturday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_border_background"
                android:textColor="@color/mainGreen"
                android:padding="0dp"
                android:text="S"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSunday"
                app:layout_constraintStart_toEndOf="@id/btnFriday"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnSunday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_border_background"
                android:textColor="@color/mainGreen"
                android:padding="0dp"
                android:text="D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnSaturday"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layoutWeekDays"
            android:layout_marginTop="50dp">

            <TextView
                style="@style/Txt_14_R_Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del recordatorio"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/inputReminderNameScheduleScreen"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/black_33"
                android:textSize="16dp"
                android:background="@drawable/input_background" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnCancelScheduleScreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_corner_radius_10"
                android:text="cancelar"
                android:textColor="@color/mainGreen"
                android:textStyle="bold"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnScheduleScheduleScreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnScheduleScheduleScreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/corner_radius_10"
                android:text="programar"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/white_f2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnCancelScheduleScreen"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>