<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.pages.schedule.pages.ScheduleScreenFragment"
    android:orientation="vertical">

    <include android:id="@+id/appBarSchedule" layout="@layout/custom_app_bar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="22dp">

        <TextView
            android:id="@+id/btnInitTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="48dp"
            android:layout_marginTop="20dp"
            android:text="05 : 27 PM"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutWeekDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btnInitTimePicker"
            tools:layout_editor_absoluteX="16dp"
            android:paddingVertical="25dp">

            <Button
                android:id="@+id/btnMonday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:text="L"
                android:background="@drawable/circle_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnTuesday"/>

            <Button
                android:id="@+id/btnTuesday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:text="M"
                android:background="@drawable/circle_background"
                app:layout_constraintStart_toEndOf="@id/btnMonday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnWenesday"/>

            <Button
                android:id="@+id/btnWenesday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:text="M"
                android:background="@drawable/circle_background"
                app:layout_constraintStart_toEndOf="@id/btnTuesday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnThursday"/>

            <Button
                android:id="@+id/btnThursday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:text="J"
                android:background="@drawable/circle_background"
                app:layout_constraintStart_toEndOf="@id/btnWenesday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnFriday"/>

            <Button
                android:id="@+id/btnFriday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:text="V"
                android:background="@drawable/circle_background"
                app:layout_constraintStart_toEndOf="@id/btnThursday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSaturday"/>

            <Button
                android:id="@+id/btnSaturday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:text="S"
                android:background="@drawable/circle_background"
                app:layout_constraintStart_toEndOf="@id/btnFriday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSunday"/>

            <Button
                android:id="@+id/btnSunday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:text="D"
                android:background="@drawable/circle_background"
                app:layout_constraintStart_toEndOf="@id/btnSaturday"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layoutWeekDays"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingVertical="20dp">

            <Button
                android:id="@+id/btnCancelScheduleScreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="cancelar"
                android:textColor="@color/mainGreen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/border_corner_radius_10"
                app:layout_constraintEnd_toStartOf="@id/btnScheduleScheduleScreen"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/btnScheduleScheduleScreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="programar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/corner_radius_10"
                app:layout_constraintStart_toEndOf="@id/btnCancelScheduleScreen"
                android:layout_marginLeft="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>